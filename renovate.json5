/*! Every change validate this file with: */
/*? npx --yes --package renovate -- renovate-config-validator renovate.json5 */

{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:best-practices',
  ],
  timezone: 'Europe/Prague',
  schedule: [
    'after 3:15pm and before 4:20pm on Monday',
    'after 3:15pm and before 4:20pm on Thursday',
  ],
  lockFileMaintenance: {
    enabled: true,
    schedule: [
      'after 3:15pm and before 4:20pm on Wednesday',
    ],
    automerge: true,
  },
  postUpdateOptions: [
    'pnpmDedupe',
  ],
  npm: {
    minimumReleaseAge: '14 days',
  },
  packageRules: [
    {
      groupName: 'vitest monorepo',
      matchPackageNames: ['vitest-browser-react',]
    },
    {
      groupName: 'biome & commit tooling',
      matchPackageNames: [
        '/^@biomejs\\/.*/',
        '/^@commitlint\\/.*/',
        'lefthook',
        'dependency-cruiser',
        'knip',
      ],
    },
    {
      groupName: 'testing stack',
      matchPackageNames: [
        'jest-axe',
        '@types/jest-axe',
        'playwright',
        '@playwright/test',
      ],
    },
    {
      groupName: 'Core GitHub Actions',
      matchManagers: ['github-actions'],
      matchPackageNames: ['/^actions//', '!actions/setup-node',]
    },
    {
      groupName: 'Test Actions',
      matchManagers: ['github-actions',],
      matchPackageNames: [
        '/^dorny/test-reporter/',
        '/^codecov/codecov-action/',
      ],
    },
    {
      groupName: 'Security Actions',
      matchManagers: ['github-actions', 'docker-compose',],
      matchPackageNames: [
        '/^aquasec/trivy/',
        '/^aquasecurity/trivy/',
        '/^github/codeql-action/',
      ],
    },
    {
      groupName: 'Docker build Actions',
      matchManagers: ['github-actions'],
      matchPackageNames: [
        '/^docker//',
      ],
    },
  ],
}
