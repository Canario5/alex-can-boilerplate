{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on",
        "useSortedAttributes": "on",
        "useSortedKeys": "off",
        "useSortedProperties": "on"
      }
    }
  },
  "css": {
    "formatter": {
      "quoteStyle": "double"
    }
  },
  "files": {
    "ignoreUnknown": true,
    "includes": ["**/*.js", "**/*.ts", "**/*.jsx", "**/*.tsx", "**/*.json", "!renovate.json5", "!!**/dist"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 115,
    "lineEnding": "lf"
  },
  "javascript": {
    "formatter": {
      "jsxQuoteStyle": "double",
      "quoteStyle": "single",
      "semicolons": "always",
      "trailingCommas": "all"
    }
  },
  "linter": {
    "enabled": true,
    "domains": {
      "project": "recommended",
      "react": "recommended"
    },
    "rules": {
      "recommended": true,
      "complexity": {
        "noForEach": "info",
        //? https://biomejs.dev/linter/rules/no-for-each/
        "noUselessThisAlias": "error"
        //? "info" -> "error"; https://biomejs.dev/linter/rules/no-useless-this-alias/
      },
      "nursery": {
        "noUnnecessaryConditions": "warn",
        //? https://biomejs.dev/linter/rules/no-unnecessary-conditions/
        "noEmptySource": {
          "options": {
            "allowComments": true
          },
          "level": "error"
        }
      },
      "performance": {
        "noBarrelFile": "warn",
        //? https://biomejs.dev/linter/rules/no-barrel-file/
        "noReExportAll": "warn"
        //? https://biomejs.dev/linter/rules/no-re-export-all/
      },
      "style": {
        "useComponentExportOnlyModules": "error"
        //? https://biomejs.dev/linter/rules/use-component-export-only-modules/
      },
      "suspicious": {
        "noConstantBinaryExpressions": "warn",
        //? "info" -> "warn"; https://biomejs.dev/linter/rules/no-constant-binary-expressions/
        "noExplicitAny": "warn",
        //? ? "warn" -> "error" ?; https://biomejs.dev/linter/rules/no-explicit-any/
        "noUselessRegexBackrefs": "error"
        //? "warn" -> "error"; https://biomejs.dev/linter/rules/no-useless-regex-backrefs/
      }
    }
  },
  "vcs": {
    "clientKind": "git",
    "defaultBranch": "main",
    "enabled": true,
    "useIgnoreFile": true
  }
}
